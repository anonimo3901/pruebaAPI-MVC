
@{
    ViewBag.Title = "Libros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row justify-content-center" style="margin-top:20px">

    <div class="col-12 text-center">
        <h2>Libros</h2>
    </div>
    <div class="col-10">
        @Html.ActionLink("Agregar", "Create", "Libros", new { area = "" }, new { @class = "btn btn-success" })
    </div>
    @*<div class="col-9">
            <input class="form-control form-control-sm" type="text" placeholder="Buscar" />
        </div>*@
    <div class="col-10" style="margin-top: 20px">
        <table class="table table-striped table-bordered table-responsive" style="width:100%!important;" id="tblLibros">
            <thead class="table-dark">
                <tr>
                    <th>Consecutivo</th>
                    <th>Titulo</th>
                    <th>Año</th>
                    <th>Genero</th>
                    <th>Num. Paginas</th>
                    <th>Autor</th>
                    <th>Editar</th>
                    <th>Ver</th>
                    <th>Eliminar</th>
                </tr>

            </thead>
            <tbody class="table-secondary">
                @foreach (var librosList in Model)
                {
                <tr>
                    <td>@librosList.LICONSECUTIVO</td>
                    <td>@librosList.LITITULO</td>
                    <td>@librosList.LIANO</td>
                    <td>@librosList.LIGENERO</td>
                    <td>@librosList.LINUMPAG</td>
                    <td>@librosList.AUNOMBRE</td>
                    <td>
                        @Html.ActionLink("Editar", "Update", "Libros", new { id = librosList.LICONSECUTIVO }, new { @class = "btn btn-primary" })
                    </td>
                    <td>
                        @Html.ActionLink("Ver", "Details", "Libros", new { id = librosList.LICONSECUTIVO }, new { @class = "btn btn-info" })
                    </td>
                    <td>
                        @Html.ActionLink("Eliminar", "Delete", "Libros", new { id = librosList.LICONSECUTIVO }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
                }

            </tbody>

        </table>
        <div class="form-group" style="margin-top:20px">
            <div class="col-md-offset-2 col-md-10">
                <font color="green">@ViewBag.mensaje1</font>
                <font color="red">@ViewBag.mensaje2</font>
            </div>
        </div>
    </div>
</div>